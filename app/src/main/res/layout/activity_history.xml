<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".History">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        app:srcCompat="@drawable/logo_shatabdi"
        />


    <EditText
        android:id="@+id/selectdate"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/camerabutton"
        android:hint="Date"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:inputType="date"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/datewhite"
        android:paddingEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:id="@+id/searchdealer"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/edittextbg"
            android:hint="Search Dealer Name"
            android:textColorHint="#676767"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:paddingEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camerabutton"
            android:textColor="@color/white"
            android:drawableStart="@drawable/search"
            android:padding="12dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/nodealersvisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleX="1.1"
        android:scaleY="1.05"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


</LinearLayout>