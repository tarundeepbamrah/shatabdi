<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TrackSalesman">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"

        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Salesman"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/googleicon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requires Google Account Login to\ntrack Salesman Location"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/livelocation"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:paddingTop="30dp"
            android:text="Live Location Tracking"
            android:textColor="@color/blue"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/tracklocation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requires Admin Account Login"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="1dp"
            android:background="@color/blue"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/locationhistory"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:paddingTop="30dp"
            android:text="Location History"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:drawableTop="@drawable/history"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requires Salesman Account Login"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


    </LinearLayout>




</LinearLayout>